# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
