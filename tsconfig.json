{
  "extends": "@total-typescript/tsconfig/tsc/no-dom/library",
  "compilerOptions": {
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./lib",
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "verbatimModuleSyntax": false,
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
